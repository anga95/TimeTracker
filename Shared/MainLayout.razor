@inherits LayoutComponentBase
<PageTitle>TimeTracker</PageTitle>

@* -------- 1. FAST TOP‑BAR (ALLA SKÄRMAR) ----------------------------- *@
<nav class="navbar navbar-dark bg-primary fixed-top">
    <div class="container-fluid">

        <!-- hamburgare visas bara < lg -->
        <button class="btn btn-primary d-lg-none"
                data-bs-toggle="offcanvas"
                data-bs-target="#mobileNav">
            <i class="bi bi-list fs-3"></i>
        </button>

        <a class="navbar-brand ms-lg-2" href="">TimeTracker</a>

        <span class="flex-grow-1"></span>

        <a class="nav-link link-light" target="_blank"
           href="https://docs.microsoft.com/aspnet/">
            About
        </a>
    </div>
</nav>

@* -------- 2. HELA SIDAN UNDER NAVBAR -------------------------------- *@
<div class="container-fluid" style="padding-top:56px;"> @* 56 px = standard navbar‑höjd *@
    <div class="row">

        <!-- ❶ SIDEBAR – synlig fr o m lg, FIXED så den inte scrollar med innehållet -->
        <aside class="col-lg-2 d-none d-lg-block bg-dark text-white
                       position-fixed top-0 bottom-0"
               style="padding-top:56px; width:220px;">
            <NavMenu/>
        </aside>

        <!-- ❷ Main content (tar hela bredden på mobil, offset på desktop) -->
        <main class="col-12 col-lg-10 offset-lg-2 py-4 px-3 px-lg-5">
            @Body
        </main>
    </div>
</div>

@* -------- 3. OFF‑CANVAS för mobil (< lg) ---------------------------- *@
<div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="mobileNav">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">Meny</h5>
        <button class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0">
        <NavMenu/>
    </div>
</div>